<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/main.css">

  <title>Document</title>
</head>

<body>
  <section>
    <main class="home__header">
      <h1>My first Ejs site</h1>
    </main>
    <div class="home__divider"></div>

    <div class="home_profile__wrapper">
      <div class="home_profile_header">
        <h2>Meet the team</h2>
      </div>

      <div class="home_profile__wrapper__grid">

        <% profiles.forEach(result => { %>
        <div class="home__profile">
          <div class="home__profile__img">
            <% if (result.gender == "f") { %>
            <img src="img/girl.webp" alt="">
            <% } %>
            <% if (result.gender == "m") { %>
            <img src="img/boy.webp" alt="">
            <% } %>
          </div>
          <div class="home__profile__text">
            <p>
              <span>Name:</span>
              <%= result.name  %>
            </p>
            <p>
              <span>Gender:</span>
              <%= result.gender  %>
            </p>
          </div>
        </div>
        <% }); %>
      </div>
    </div>


    <h1>Hello world</h1>
    <h2>
      <%= text  %>
    </h2>
  </section>


</body>

</html>